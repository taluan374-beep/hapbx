# App Configuration
APP_NAME="AI Content Agency"
APP_VERSION="1.0.0"
DEBUG=true

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/ai_agency

# Redis
REDIS_URL=redis://localhost:6379/0

# AI Services - Get your API keys from:
# OpenAI: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-key

# Anthropic: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key

# Replicate (for Flux): https://replicate.com/account/api-tokens
REPLICATE_API_TOKEN=r8_your-replicate-token

# HeyGen (Video): https://app.heygen.com/settings/api
HEYGEN_API_KEY=your-heygen-key

# ElevenLabs (Voice): https://elevenlabs.io/api
ELEVENLABS_API_KEY=your-elevenlabs-key

# Storage (AWS S3 or Cloudflare R2)
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
S3_BUCKET_NAME=ai-agency-assets
S3_REGION=ap-southeast-1

# Supabase (optional, for auth)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-key

# JWT
JWT_SECRET_KEY=your-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440
